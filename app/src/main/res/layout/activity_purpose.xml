<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.anima.xd.s.myapp.main.PurposeActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edPurpose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="purpose title"
        android:inputType="text"
        android:ems="20"
        android:lines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017년 10월 22일"
            android:textSize="@dimen/typo_body"
            android:textColor="@color/myColorGreyText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부터"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017년 10월 21일"
            android:textSize="@dimen/typo_body"
            android:textColor="@color/myColorGreyText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="까지"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivAddObjectiveList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_objective_list"
        android:clickable="true"/>

    <EditText
        android:id="@+id/tvObjective"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="objective name"
        android:inputType="text"/>





</LinearLayout>
